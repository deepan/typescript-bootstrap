{
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "es2017",
      "DOM"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strictNullChecks": false,
    "resolveJsonModule": true,
    "types": [
      "node",
      "vitest/globals"
    ]
  }
}